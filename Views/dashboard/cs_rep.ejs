<div class="columns">
    <div class="column is-4">
        <div class="box">
            <div class="content">
                <h1 class="title">CS Rep</h1>
                <p>View and manage accounts</p>
                <a href="/account/0" class="button is-primary">Accounts</a>
                <button class="button is-primary">Add a New Patient</button>
            </div>
        </div>
    </div>
    <div class="column is-8">
        <div class="box">
            <div class="content">
                <h1 class="title">CS Rep</h1>
            </div>
            <div class="content">
                <table class="table is-hoverable is-striped is-fullwidth is-narrow">
                    <thead>
                        <tr>
                            <th>Patient ID</th>
                            <th>Patient Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% accounts.forEach(account => { %>
                            <tr>
                                <td class="has-text-dark"><%- account.patient_id %></td>
                                <td class="has-text-dark"><%- account.last_name %>, <%- account.first_name %></td>
                                <td>
                                    <a href="/account/<%- account.patient_id %>/0" class="button is-primary">View</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>